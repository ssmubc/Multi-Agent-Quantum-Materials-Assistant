option_settings:
  aws:elasticbeanstalk:application:environment:
    # AWS Cognito Configuration
    # Set these values in EB environment configuration
    COGNITO_POOL_ID: ""
    COGNITO_APP_CLIENT_ID: ""
    COGNITO_APP_CLIENT_SECRET: ""
    
    # Authentication mode selection
    # Set to "cognito" to enable Cognito, leave empty for demo mode fallback
    AUTH_MODE: "cognito"