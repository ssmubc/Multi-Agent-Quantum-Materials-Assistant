option_settings:
  aws:elasticbeanstalk:application:environment:
    # AWS Cognito Configuration
    # These values MUST be set in EB environment configuration or AWS Systems Manager Parameter Store
    # DO NOT set empty values - application will validate and fail fast if missing
    
    # Authentication mode selection
    # Set to "cognito" to enable Cognito, leave empty for demo mode fallback
    AUTH_MODE: "cognito"
    
    # Validation settings
    REQUIRE_COGNITO_CONFIG: "true"